<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.446">

        <ImageButton
            android:id="@+id/base_1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/base_1" />

        <ImageButton
            android:id="@+id/base_2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/base"
            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/base_3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/base_2"
            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/base_4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/base_4"
            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/base_5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/base_5"
            android:layout_marginStart="10dp" />

        <ImageButton
            android:id="@+id/color_pic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/colorpicker_img"
            android:layout_marginStart="10dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>